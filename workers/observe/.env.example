# Observe Worker - Environment Variables

# API Settings
OBSERVE_API_HOST=0.0.0.0
OBSERVE_API_PORT=8001

# Kubernetes Settings
OBSERVE_IN_CLUSTER=false
OBSERVE_KUBECONFIG_PATH=  # Leave empty for default kubeconfig path

# Monitoring Settings
OBSERVE_WATCH_EVENTS=true
OBSERVE_CHECK_INTERVAL=30
OBSERVE_SYNC_INTERVAL=10

# Kubervise API Settings (Recommended - secure token-based auth)
OBSERVE_API_URL=https://your-kubervise-app.vercel.app
OBSERVE_AGENT_TOKEN=your-agent-token  # Generated when creating cluster in Kubervise
OBSERVE_CLUSTER_ID=your-cluster-uuid  # UUID of the cluster

# Legacy Supabase Settings (Deprecated - use API settings above)
# OBSERVE_SUPABASE_URL=https://your-project.supabase.co
# OBSERVE_SUPABASE_SERVICE_KEY=your-service-role-key
